  "main": "dist/index.js",
  "bin": "bin/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gustavonobreza/node-typescript-setup.git"
  },
  "author": "Gustavo Alexandre Nobre Mesquita <gnobremesquita@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
